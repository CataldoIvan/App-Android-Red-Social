<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Perfil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="351dp">

            <ImageView
                android:id="@+id/portadaIV"
                android:layout_width="411dp"
                android:layout_height="273dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <ImageView
                android:id="@+id/imgPerfilenPerfilIV"
                android:layout_width="173dp"
                android:layout_height="166dp"
                android:layout_marginTop="188dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/portadaIV"
                app:layout_constraintStart_toStartOf="@+id/portadaIV"
                app:layout_constraintTop_toTopOf="@+id/portadaIV"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="103dp"
                android:layout_height="58dp"
                android:layout_marginBottom="108dp"
                android:gravity="center"
                android:text="Publicaiones 10"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imgPerfilenPerfilIV"
                app:layout_constraintEnd_toStartOf="@+id/imgPerfilenPerfilIV"
                app:layout_constraintHorizontal_bias="0.941"
                app:layout_constraintStart_toStartOf="@+id/portadaIV" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="103dp"
                android:layout_height="58dp"
                android:layout_marginTop="188dp"
                android:gravity="center"
                android:text="Publicaiones 10"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imgPerfilenPerfilIV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/imgPerfilenPerfilIV"
                app:layout_constraintTop_toTopOf="@+id/portadaIV"
                app:layout_constraintVertical_bias="0.074" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/nombreUserPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/correoUserPerfilTV"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="TextView"
            android:textSize="24sp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</ScrollView>