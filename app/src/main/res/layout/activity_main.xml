<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="182dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="Login"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3" />

        <EditText
            android:id="@+id/usuarioLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789\@\.\-"
            android:ems="10"
            android:hint="Usuario"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/errorPass2"
            android:layout_width="199dp"
            android:layout_height="22dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Usuario Incorrecto"
            android:textColor="#F40000"
            android:textStyle="bold"
            tools:visibility="gone" />

        <EditText
            android:id="@+id/contraseniaLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Contrasenia"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/errorPass"
            android:layout_width="270dp"
            android:layout_height="21dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Usuario o Contrasenia Incorrecta"
            android:textColor="#F40000"
            android:textStyle="bold"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/guardarDatosChBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Mantener Iniciada la Sesion" />

        <Button
            android:id="@+id/iniSesion"
            android:layout_width="174dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="Iniciar Sesion" />

        <Button
            android:id="@+id/registrarseBTN"
            android:layout_width="175dp"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:layout_marginTop="44dp"
            android:text="Registrarse" />

        <Button
            android:id="@+id/irFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Ir a Fragment" />
    </LinearLayout>


</ScrollView>