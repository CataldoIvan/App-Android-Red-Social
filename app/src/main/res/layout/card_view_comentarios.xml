<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingTop="5dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/publSelFotoPerfil"
            android:layout_width="70dp"
            android:layout_height="66dp"
            android:elevation="1dp"
            android:src="@drawable/ic_launcher_background"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:contentDescription="gh"
                android:padding="10dp"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/publSelNomUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingLeft="10dp"
                android:text="Nombre User"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="11dp"
                android:contentDescription="gh"
                android:padding="10dp"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/publSelPublicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="aca va comentario"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:contentDescription="gh"
                android:padding="10dp"
                tools:visibility="visible" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardImgPublicacion"
                android:layout_width="300dp"
                android:layout_height="270dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/publSelFoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_launcher_foreground" />

            </androidx.cardview.widget.CardView>


            <Space
                android:layout_width="320dp"
                android:layout_height="10dp"
                android:contentDescription="gh"
                android:padding="10dp"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/localizacionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:soundEffectsEnabled="false"
                android:text="TextView"
                android:textColor="#266DFA"
                android:textColorLink="#4472FF"
                android:textIsSelectable="false"
                android:textSize="12sp"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/IVcomentario"
                    android:layout_width="41dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_comment" />

                <TextView
                    android:id="@+id/cantComentPublic"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:text="0" />

                <ImageView
                    android:id="@+id/IVlike"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_star" />

                <TextView
                    android:id="@+id/cantMG_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="0" />

                <ImageView
                    android:id="@+id/IVshare"
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="?attr/actionModeShareDrawable" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:contentDescription="gh"
                android:padding="10dp"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>