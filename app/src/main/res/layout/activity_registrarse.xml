<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03FFFFFF"
    android:orientation="vertical"
    tools:context=".Registrarse">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPerfilIV"
                android:layout_width="217dp"
                android:layout_height="145dp"
                android:layout_gravity="center"
                android:src="@drawable/jeremy_full"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="142dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:background="#99FBFBFB"
                android:fontFamily="sans-serif-medium"
                android:text="Seleccionar Foto"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#0A0A0A"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imgPerfilIV"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="@+id/imgPerfilIV"
                app:layout_constraintTop_toTopOf="@+id/imgPerfilIV"
                app:layout_constraintVertical_bias="1.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:id="@+id/nombreTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
            android:ems="10"
            android:hint="Ingrese un Nombre "
            android:inputType="none|text"
            android:maxLength="20" />

        <TextView
            android:id="@+id/errorNomTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="erro es "
            android:textColor="#EC0000"
            android:textSize="10sp"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/apellidoTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
            android:ems="10"
            android:hint="Apellido"
            android:inputType="none|text"
            android:maxLength="20" />

        <TextView
            android:id="@+id/errorApeTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="erro es "
            android:textColor="#EC0000"
            android:textSize="10sp"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/userTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789\@\.\-"
            android:ems="10"
            android:hint="Usuario"
            android:inputType="textPersonName"
            android:maxLength="10" />

        <TextView
            android:id="@+id/errorUserTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="erro es "
            android:textColor="#EC0000"
            android:textSize="10sp"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/correoTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789\@\.\-"
            android:ems="10"
            android:hint="Correo "
            android:inputType="textPersonName"
            android:maxLength="30" />

        <TextView
            android:id="@+id/errorCorreoTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="erro es "
            android:textColor="#EC0000"
            android:textSize="10sp"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/contraseniaTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
            android:ems="10"
            android:hint="ContraseÃ±a"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/errorContraTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="35dp"
            android:gravity="center"
            android:text="erro es "
            android:textColor="#EC0000"
            android:textSize="10sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Todos los campos son obligatorios"
            android:textSize="10sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelarRegBTN"
                android:layout_width="173dp"
                android:layout_height="56dp"
                android:layout_margin="5dp"
                android:text="Cancelar" />

            <Button
                android:id="@+id/guardarRegBTN"
                android:layout_width="173dp"
                android:layout_height="56dp"
                android:layout_margin="5dp"
                android:text="Guardar" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>